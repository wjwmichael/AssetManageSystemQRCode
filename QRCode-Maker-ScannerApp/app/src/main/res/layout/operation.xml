<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".EditActivity" >

    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/button2"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="49dp"
        android:text="@string/hello_world" />



    <Button
        android:id="@+id/buttona"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/title"
        android:layout_marginTop="50dp"
        android:layout_toLeftOf="@+id/title"
        android:text="创建用户" />

    <Button
        android:id="@+id/buttonb"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/buttona"
        android:layout_alignBottom="@+id/buttona"
        android:layout_toRightOf="@+id/title"
        android:text="查询用户" />

    <Button
        android:id="@+id/buttond"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/buttone"
        android:layout_toLeftOf="@+id/title"
        android:text="删除用户" />

    <Button
        android:id="@+id/buttone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/buttonc"
        android:layout_toLeftOf="@+id/title"
        android:text="添加物品" />

    <Button
        android:id="@+id/buttonf"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/buttong"
        android:layout_below="@+id/buttong"
        android:text="更新物品" />

    <Button
        android:id="@+id/buttonh"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/buttonf"
        android:layout_below="@+id/buttonf"
        android:text="清空物品" />

    <Button
        android:id="@+id/buttonc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/buttona"
        android:layout_toLeftOf="@+id/title"
        android:text="更新用户" />

    <Button
        android:id="@+id/buttong"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/buttonc"
        android:layout_alignBottom="@+id/buttonc"
        android:layout_alignLeft="@+id/buttonb"
        android:text="删除物品" />

    <Button
        android:id="@+id/buttoni"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/buttond"
        android:layout_centerHorizontal="true"
        android:text="清空所有数据" />

    <Button
        android:id="@+id/buttonk"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/buttond"
        android:layout_below="@+id/buttoni"
        android:text="生成二维码" />

    <Button
        android:id="@+id/buttonj"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/buttonk"
        android:layout_alignBottom="@+id/buttonk"
        android:layout_alignRight="@+id/buttonh"
        android:text="返回" />

</RelativeLayout>